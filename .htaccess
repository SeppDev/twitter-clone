RewriteEngine On

RewriteRule ^src/(modules)(/|$) - [F,L]

RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.*)$ $1.php [NC,L] 

RewriteRule ^profile/([a-z]+)/?$    profile.php?username=$1    [NC,L]  

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ src/$1 [L]
